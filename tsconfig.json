
{
    "compilerOptions": {
        "noEmitOnError": true,
        "noEmitHelpers": true,
        "sourceMap": false,
        "removeComments": true,
        "declaration": false,
        "experimentalDecorators": true,
        "skipLibCheck": true,
        "target": "es5",
        "module": "commonjs",
        "outDir": ".",
        "lib": ["es6", "dom"],
        "rootDir": ".",
        "baseUrl": ".",
        "paths": {
            "*": [
            "./node_modules/tns-core-modules/*",
            "./node_modules/*"
            ]
        }
    }, 
    "exclude": [
        "node_modules", 
        "demo", 
        "demo-ng", 
        "bin"
    ]
}